<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/articleImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/horizontalMargin"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:scaleType="centerCrop"
        android:src="@color/grey"
        app:riv_corner_radius="@dimen/min_corner_radius" />

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:textColor="@color/black"
        android:fontFamily="@font/be_vietnam_bold"
        tools:text="Ini Kronologis Putra Ridwan Kamil Hilang Terseret Arus di Swiss" />

    <TextView
        android:id="@+id/articleDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:ellipsize="end"
        android:maxLines="3"
        android:fontFamily="@font/be_vietnam"
        android:textColor="@color/black"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/articleSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:textSize="12sp"
        android:fontFamily="@font/be_vietnam"
        tools:text="Kompas.com - 1  hari yang lalu" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/horizontalMargin"
        android:background="@color/grey" />

</LinearLayout>